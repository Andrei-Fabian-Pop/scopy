}

QDial#SBA_CompletionCircle {
  background-color: black;
  color: #4963ff;
}


/**************************** Custom Menu Button  *********************************/

QPushButton#CustomMenuButton_pushButton {
  width: 40px;
  height: 20px;
  background-color: transparent;
}
QPushButton#btnCustomMenuButton:pressed { border-image: url(:/icons/common/setup_btn_checked.svg); }
QPushButton#btnCustomMenuButton:!pressed { border-image: url(:/icons/common/setup_btn_unchecked.svg); }
QPushButton#btnCustomMenuButton:hover:!pressed:!checked { border-image: url(:/icons/common/setup_btn_hover.svg); }
QPushButton#btnCustomMenuButton:checked { border-image: url(:/icons/common/setup_btn_checked.svg); }


/***************************** Channel widget ***********************/

scopy--gui--ChannelWidget QWidget {
  color: rgba(255, 255, 255, 153);
  border-width: 0px;
  border-radius: 6px;
}

/* Widget containing checkBox, btnName, btn */
scopy--gui--ChannelWidget QWidget#widget {
  background-color: transparent;
  border-radius: 4px;
}

scopy--gui--ChannelWidget QWidget#widget[selected=true] { background-color: rbga(20, 20, 22, 153); }

/* Round check box */
scopy--gui--ChannelWidget QCheckBox#checkBox{
  spacing: 0px;
  background-color: none;
  font-size: 14px;
  font-weight: bold;
}

scopy--gui--ChannelWidget QCheckBox#checkBox::indicator {
  width: 14px;
  height: 14px;
  border: 2px solid #000000; /* Will be overwritted in the ChannelWidget constructor */
  border-radius: 9px;
}

scopy--gui--ChannelWidget QCheckBox#checkBox::indicator:unchecked { background-color: transparent; }

/* Will be overwritted in the ChannelWidget constructor */
scopy--gui--ChannelWidget QCheckBox#checkBox::indicator:checked { background-color: #000000; }

/* btnName */
scopy--gui--ChannelWidget QPushButton#btnName {
  font-size: 14px;
  font-weight: bold;
  background-color: none;
}

/* Delete Button */
scopy--gui--ChannelWidget QPushButton#btnDel {
  width: 24px;
  height: 24px;
  background-color: transparent;
  background-position: center center;
  background-repeat: no-repeat;
  background-image: url(:/icons/common/redX.svg);
}
scopy--gui--ChannelWidget QPushButton#btnDel::hover { background-image: url(:/icons/common/redX.svg); }

/* Menu button */
scopy--gui--ChannelWidget QPushButton#btn {
  width: 40px;
  height: 20px;
  background-color: transparent;
}

scopy--gui--ChannelWidget QPushButton#btn:pressed { border-image: url(:/icons/common/setup_btn_checked.svg); }
scopy--gui--ChannelWidget QPushButton#btn:!pressed { border-image: url(:/icons/common/setup_btn_unchecked.svg); }
scopy--gui--ChannelWidget QPushButton#btn:hover:!pressed:!checked { border-image: url(:/icons/common/setup_btn_hover.svg); }
scopy--gui--ChannelWidget QPushButton#btn:checked { border-image: url(:/icons/common/setup_btn_checked.svg); }

/* Underline */
scopy--gui--ChannelWidget QFrame#line { border: 2px solid transparent; }

/* Will be overwritted in the ChannelWidget constructor */
scopy--gui--ChannelWidget QFrame#line[selected=true] { border: 2px solid #000000; }


/******************** User Notes *************************/

scopy--gui--Note QPushButton#btn { background-image: url(:/icons/default-theme/icons/ic_note_unchecked.svg); }

scopy--gui--Note QPushButton#btn:checked { background-image: url(:/icons/common/ic_note_checked.svg); }


/* Style for icon-buttons such as Device, Home, Plus, etc. */

QWidget[menu_button=true][selected=true] {
	opacity: 0.6;
	border-radius: 4px;
	background-color: #141416;
}

QWidget[menu_button=true][selected=false] { background-color: transparent; }


/* Style for all line separators */

QFrame[line_separator=true]{ background-color: rgba(255, 255, 255, 16); }


/******************** Dropdown switch list ************************/

scopy--gui--DropdownSwitchList {
  height: 30px;
  border: 0px;
  font-size: 18px;
  border-radius: 4px;
  padding-left: 20px;
}

scopy--gui--DropdownSwitchList:editable{
  background-color: #141416;
  color: white;
}

scopy--gui--DropdownSwitchList::drop-down {
  subcontrol-position: center right;
  width: 10px;
  height: 6px;
  border-image: url(:/icons/default-theme/icons/sba_cmb_box_arrow.svg);
  margin-right: 20px;
}

scopy--gui--DropdownSwitchList QAbstractItemView {
  border: 0px;
  background-color: #141416;
  font-size: 18px;
  outline: 0px;

  /* Add left space. Color should match background-color*/
  border-left: 0px solid #141416; /* setting to 0 for now */
}

scopy--gui--DropdownSwitchList QAbstractItemView::item {
  color: #ffffff;
  height: 60px;
}

scopy--gui--DropdownSwitchList QAbstractItemView::item:hover {
  background-color: #141416;
  font-weight: bold;
  border-bottom: 0px solid none;
}

scopy--gui--DropdownSwitchList QHeaderView {
  /* Cancel the effect of the QAbstractItemView border-left property. It's
  necessary because the border (or padding) of the QAbstractItemView applies to
  this element as well. */
  padding-left: -0px;
}

scopy--gui--DropdownSwitchList QHeaderView:section {
  color: rgba(255, 255, 255, 153);
  background-color: #141416;
  border: 0px;
  font: 14px;
}

scopy--gui--DropdownSwitchList QCheckBox {
	background-color: #141416;
}

scopy--gui--DropdownSwitchList QCheckBox::indicator {
  width: 16px;
  height: 16px;
  subcontrol-position: center;
}

